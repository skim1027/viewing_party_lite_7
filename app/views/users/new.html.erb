<div class="register-form">
  <h2>Register a New User</h2>

  <%= form_with url: "/users", method: :post, local: true, turbo: false do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br/>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br/>
    <%= f.submit "Create New User" %>
  <% end %>
</div>